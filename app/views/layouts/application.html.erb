<!DOCTYPE html>
<html>
  <head>
    <title> <%= t('app.app_title') %> </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <script src="https://api-maps.yandex.ru/2.1/?apikey=<%=Rails.application.credentials.yandex[:api_key]%>&lang=ru_RU" type="text/javascript"> </script>
    <%= javascript_pack_tag 'application' %>
  </head>
<body>
  <div class="container">
    <div class="row">
      <div class="col">
        <%= render 'layouts/header' %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="offset-1 col-10">
        <%= render 'partials/flash' %>
        <%= yield %>
      </div>
    </div>
  </div>
  <footer class="footer buffer-top">
    <div class="container">
      <span>&copy; <%= mail_to 'ilyamur@hotmail.com', t('app.author') %> - 2021</span>
    </div>
  </footer>
</body>
</html>


