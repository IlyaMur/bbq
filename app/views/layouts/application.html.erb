<!DOCTYPE html>
<html>
  <head>
    <title>BBQForMyFriends</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <strong> <%= link_to 'BBQ', root_path, class: 'navbar-brand' %> </strong>
      <div class="navbar-nav-scroll">
        <ul class="navbar-nav bd-navbar-nav flex-row">
          <% if user_signed_in? %>
            <li class="nav-item">
              <a <%= link_to 'Профиль', current_user, class: 'nav-link' %> </a>
            </li>
            <li class="nav-item">
              <a> <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: 'nav-link' %> </a>
            </li>
          <% else %>
            <li class="nav-item">
              <a <%= link_to 'Вход', new_user_session_path, class: 'nav-link' %> </a>
            </li>
            <li class="nav-item">
              <a> <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link' %> </a>
            </li>
          <% end %>
      </div>
    </nav>

    <div class="row">
      <div class="col-lg-9">
        <% if flash.any? %>
          <% flash.each do |err, text| %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= text %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div> 
  </body>
</html>
