<!DOCTYPE html>
<html>
  <head>
    <title>Шашлыки для друзей</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
  <div class="container">
    <div class="row">
      <div class="col">
        <nav class="navbar navbar-expand-lg navbar-light bg-light buffer-bottom">
          <strong> <%= link_to t('app.name'), root_path, class: 'navbar-brand' %> </strong>
          <div class="navbar-nav-scroll ml-auto">
            <ul class="navbar-nav">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'Профиль', current_user, class: 'nav-link' %> 
                </li>
                <li class="nav-item">
                  <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: 'nav-link' %>
                </li>
              <% else %>
                <li class="nav-item">
                   <%= link_to 'Вход', new_user_session_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link' %> 
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <%= render 'partials/flash' %>
        <%= yield %>
      </div>
    </div>
  </div>
  <footer class="footer">
    <div class="container">
      <span class="text-muted float-right">&copy; <%= t('app.author') %> - 2021</span>
    </div>
  </footer>
</body>
</html>
