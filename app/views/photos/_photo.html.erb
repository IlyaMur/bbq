<% image_title = "Добавил: #{render partial: 'users/user', object: photo.user}" %>

<% 
  delete_icon = 
    link_to(
      content_tag('div', tag.small('Удалить фотографию')), 
      event_photo_path(photo.event, photo), 
      method: :delete, 
      data: {confirm: 'Вы уверены?'},
    )
%>

<% image_title << delete_icon if current_user_can_edit?(photo) %>

<%= 
  link_to(
    image_tag(photo.photo.thumb.url), 
    photo.photo.url, 
    data: { 
      lightbox: "lightbox", 
      title: image_title, 
    },
    class: 'margin-photo',
  ) 
%>
</span>
