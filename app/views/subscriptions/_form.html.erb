<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: subscription } %>
  <% unless user_signed_in? %>
    <div class="field mt-3">
      <%= f.label :user_name, class: 'font-weight-bold' %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>
    <div class="field mt-3">
      <%= f.label :user_email, class: 'font-weight-bold' %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>
  <div class="actions mt-3 mb-3">
    <%= f.submit t('.subscribe'), class: 'btn btn-primary' %>
  </div>
<% end %>
