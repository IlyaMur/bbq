<div class="event buffer-both">
  <div class="event-info">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
        style: "background-image: url(#{asset_path('event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>
          <% if current_user_can_edit?(@event) %>
            <div class="buffer-top">
              <%= link_to t('app.change'), edit_event_path(@event), class: 'btn btn-primary' %>
              <%= link_to t('app.del_event'), @event, data: { confirm: t("app.sure?") }, class: 'btn btn-danger buffer-both', method: :delete %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
