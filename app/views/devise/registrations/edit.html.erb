<div class="row">
  <div class="col-lg-12 buffer-top">
    <h2> <%= t('.edit_user') %> </h2>
  </div>
</div>
<div class="row">
  <div class="col-lg-9 buffer-top">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: 'col-form-label-lg' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

       <div class="form-group">
        <%= f.label :password, class: 'col-form-label-lg' %>
        <% if @minimum_password_length %>
        <em>(<%= t('.min') %> <%= @minimum_password_length %> <%= t('.chars') %>)</em>
         <br>
         <i><%= t('.dont_change_if') %> </i>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-form-label-lg' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: 'col-form-label-lg' %> <i> <%= t('.confirm_change') %></i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t("app.save"), class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= button_to t('.del_acc'), registration_path(resource_name), data: { confirm: t('app.sure?') }, class: 'btn btn-warning buffer-top float-right', method: :delete %>
    </div>
</div>

