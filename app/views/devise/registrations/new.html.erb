<%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="offset-2 col-8 buffer-top">
    <h2><%= t('.reg_message') %></h2>
  </div>
</div>
<div class="row">
  <div class="offset-2 col-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, t('.email'), class: 'col-form-label-lg' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, t('.password'), class: 'col-form-label-lg' %>
        <% if @minimum_password_length %>
        <em>(<%= t('devise.registrations.edit.min') %> <%= @minimum_password_length %> <%= t('devise.registrations.edit.chars') %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.pass_confirm'), class: 'col-form-label-lg' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t('.registration'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
